<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DistrictOfBooks" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/MaizeCrayola</item>
        <item name="colorPrimaryVariant">@color/CeladonBlue</item>
        <item name="colorOnPrimary">@color/PruassianBlue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/PruassianBlue</item>
        <item name="colorSecondaryVariant">@color/SpanishGray</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DistrictOfBooks.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DistrictOfBooks.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DistrictOfBooks.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>